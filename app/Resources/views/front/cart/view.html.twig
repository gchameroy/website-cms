{% extends "front/layout.html.twig" %}

{% block sections %}
    <section>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h2>Cart products</h2>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Attribute</th>
                                <th class="text-center">Quantity</th>
                                <th>Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for cartProduct in cart.products %}
                                <tr>
                                    <td>{{ cartProduct.product.label }}</td>
                                    <td>{% if cartProduct.attribute is not null %}{{ cartProduct.attribute.label }}{% else %}None{% endif %}</td>
                                    <td class="text-center">
                                        <span class="m-r-sm">
                                            <a href="{{ path('front_cart_remove_one_quantity', {'cartProduct': cartProduct.id}) }}">
                                                <i class="fa fa-minus"></i>
                                            </a>
                                        </span>
                                        <span>{{ cartProduct.quantity }}</span>
                                        <span class="m-l-sm">
                                            <a href="{{ path('front_cart_add_one_quantity', {'cartProduct': cartProduct.id}) }}">
                                                <i class="fa fa-plus"></i>
                                            </a>
                                        </span>
                                    </td>
                                    <td>{{ cartProduct.price|number_format(2, ',', ' ') }}€</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="2"></td>
                                <td>Sub total</td>
                                <td>{{ cart.price|number_format(2, ',', ' ') }}€</td>
                            </tr>
                            <tr>
                                <td colspan="2"></td>
                                <td>Shipping fee</td>
                                <td>0,00€</td>
                            </tr>
                            <tr>
                                <td colspan="2"></td>
                                <td>Total TTC</td>
                                <td>{{ cart.price|number_format(2, ',', ' ') }}€</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
