{% extends "front/layout.html.twig" %}

{% block meta %}<meta name="description" content="{{ staticPage.descriptionSEO }}">{% endblock %}

{% block title staticPage.titleSEO %}

{% block sections %}
    <section class="section-newsletter">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h2>{{ staticPage.title }}</h2>
                    <div class="newsletter-image">
                        {% if staticPage.image %}
                            <img class="img-responsive" src="{{ path('static_page_image_view', {'image_id': staticPage.image.id}) }}" alt="">
                        {% endif %}
                    </div>
                    <p class="m-t-md text-justify">{{ staticPage.content|raw }}</p>
                    <p><a class="btn btn-primary m-t-md" href="{{ path('front_home') }}">Retour</a></p>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
