{% spaceless %}
<!doctype html>
<html lang="fr">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="author" content="Geoffrey Chameroy">
        {% block meta '' %}

        <title>{% block title 'Les Cassis d\'Alice' %}</title>

        <link href="{{ asset('favicon.png') }}" rel="icon">
        <link href="{{ asset('template/' ~ config.theme ~ '/favicon/apple-touch-icon.png') }}" rel="apple-touch-icon" sizes="180x180">
        <link href="{{ asset('template/' ~ config.theme ~ '/favicon/favicon-32x32.png') }}" rel="icon" type="image/png" sizes="32x32">
        <link href="{{ asset('template/' ~ config.theme ~ '/favicon/favicon-16x16.png') }}" rel="icon" type="image/png" sizes="16x16">
        <link href="{{ asset('template/' ~ config.theme ~ '/favicon/manifest.json') }}" rel="manifest">
        <link href="{{ asset('template/' ~ config.theme ~ '/favicon/safari-pinned-tab.svg') }}" rel="mask-icon" color="#5bbad5">
        <meta name="theme-color" content="#ffffff">

        <link href="https://fonts.googleapis.com/css?family=Parisienne|Playfair+Display|Roboto" rel="stylesheet">
        <link href="{{ asset('inspinia/fonts/font-awesome/css/font-awesome.min.css') }}" rel="stylesheet">
        <link href="{{ asset('inspinia/css/animate.css') }}" rel="stylesheet">
        <link href="{{ asset('base/css/helper.css') }}" rel="stylesheet">
        {% if config.theme != 'default' %}
            <link href="{{ asset('template/' ~ config.theme ~ '/css/style-front.css') }}" rel="stylesheet">
        {% endif %}
        {% block stylesheets '' %}
    </head>

    <body class="{% block body_theme '' %} {% block body_class '' %}">
        {% block content %}
            {% include 'front/layout/header.html.twig' %}
            {% block sections '' %}
            {% include 'front/layout/footer.html.twig' %}
        {% endblock %}

        <script src="{{ asset('inspinia/js/jquery-3.1.1.min.js') }}"></script>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" crossorigin="anonymous">
        {% block javascripts '' %}
    </body>
</html>
{% endspaceless %}
