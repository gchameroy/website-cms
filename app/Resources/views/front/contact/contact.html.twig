{% block javascripts %}
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCe3T7l6rVotuy_15U_FIK2OCb_3IAdZLM"></script>
    <script>
        var geocoder = new google.maps.Geocoder();
        var address = 'Chemin du Paradis, 52190 Is√¥mes';

        geocoder.geocode({'address': address}, function(results, status) {
            if(status === google.maps.GeocoderStatus.OK) {
                console.log(results);
                var resultsMap = new google.maps.Map(document.getElementById('google-map'), {
                    zoom: 12,
                    center: {
                        lat: results[0].geometry.location.lat(),
                        lng: results[0].geometry.location.lng()
                    }
                });

                new google.maps.Marker({
                    map: resultsMap,
                    position: results[0].geometry.location
                });
            }
        });
    </script>
