<section class="last-products">
    <div class="container">
        <h2 class="text-center">Nos derniers produits</h2>
        <div class="row products">
            {% for product in products %}
                <div class="col-md-4 product">
                    <p class="text-center">
                        <img src="{{ asset('template/coutellerie/img/img_product_separator.png') }}" alt="">
                    </p>
                    <h3 class="text-center">{{ product.label }}</h3>
                    <p class="product-image text-center">
                        <img class="img-responsive img-circle img-shadow" src="{{ path('product_image_view', {'product_id': product.id, 'image_id': product.images[0].id}) }}" height="320" alt="">
                    </p>
                    <ul class="product-price">
                        <li>
                            <span>Prix:</span>
                            <span>{{ product.price|number_format(2, '.', ' ') }}€</span>
                        </li>
                    </ul>
                    <br class="clear">
                    <p class="text-center m-t-lg m-b-lg">
                        <a href="{{ path('front_product', {'product': product.id}) }}" class="btn btn-primary">+ de détails</a>
                    </p>
                </div>
            {% endfor %}
        </div>
        <p class="text-center m-t-lg">
            <a href="#" class="btn btn-primary">Découvrir notre catalogue</a>
        </p>
    </div>
</section>
