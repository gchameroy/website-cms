{% extends "front/layout.html.twig" %}

{% block sections %}
    <section>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h2>Product</h2>
                    <table class="table">
                        <tr>
                            <td class="text-right">id</td>
                            <td>{{ product.id }}</td>
                        </tr>
                        <tr>
                            <td class="text-right">label</td>
                            <td>{{ product.label }}</td>
                        </tr>
                        <tr>
                            <td class="text-right">description</td>
                            <td>{{ product.description }}</td>
                        </tr>
                        <tr>
                            <td class="text-right">price</td>
                            <td>{{ product.price|number_format(2, ',', ' ') }} â‚¬</td>
                        </tr>
                        <tr>
                            <td class="text-right">images</td>
                            <td>
                                <div class="row">
                                    {% for image in product.images %}
                                        <div class="col-md-3">
                                            <img class="img-responsive" src="{{ path('product_image_view', {'product_id': product.id, 'image_id': image.id}) }}">
                                        </div>
                                    {% endfor %}
                                </div>
                            </td>
                        </tr>
                    </table>
                    {{ render(controller('AppBundle:Front/CartProduct:add', {product: product.id})) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
