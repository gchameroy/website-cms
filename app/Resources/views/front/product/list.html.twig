{% extends "front/layout.html.twig" %}

{% block sections %}
    <section class="products-section">
        <div class="container bg-brown pt-3">
            <div class="row pb-5">
                <div class="col-lg-12 pb-5">
                    <h2 class="background text-center">{{ category.label }}</h2>
                    <p class="text-center mt-3 mb-4">
                        <img src="{{ asset('template/cassis-alice/img/divider-1.png') }}" alt="" />
                    </p>
                    <div class="row products mt-6">
                        {% for product in products %}
                            <div class="col-md-4 product">
                                <p class="product-title text-center">
                                    <a href="{{ path('front_product', {category: product.category.slug, product: product.slug}) }}" class="btn btn-primary">{{ product.label }}</a>
                                </p>
                                <p class="product-image text-center">
                                    {% if product.images|length > 0%}
                                        <img class="img-fluid" src="{{ path('product_image_view', {'product_id': product.id, 'image_id': product.images[0].id}) }}" alt="">
                                    {% else %}
                                        <img class="img-fluid" src="{{ path('product_image_view', {'product_id': 0, 'image_id':0}) }}" height="320" alt="">
                                    {% endif %}
                                </p>
                            </div>
                        {% endfor %}
                    </div>
                    <div class="row mt-5 mb-5">
                        <div class="col-lg-12 text-center mb-5">
                            <ul class="pagination mb-5">
                                <li class="active"><a href="{{ path('front_products', {category: category.slug, page: page - 1}) }}"><i class="fa fa-angle-double-left"></i></a></li>
                                {% for i in 1..nbPage %}
                                    <li class="{% if page == i %}active{% endif %}">
                                        <a href="{{ path('front_products', {category: category.slug, page: i}) }}">{{ i }}</a>
                                    </li>
                                {% endfor %}
                                <li class="active"><a href="{{ path('front_products', {category: category.slug, page: page + 1}) }}"><i class="fa fa-angle-double-right"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
