<section class="home-newsletters">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>Nos dernières actualités</h2>
                {% set newsletter = newsletters[0] %}
                <div class="home-newsletter row">
                    <div class="col-md-6">
                        <h3>{{ newsletter.title }}</h3>
                        <p>{{ newsletter.content|truncate(400, true, '...')|nl2br }}</p>
                        <a href="{{ path('front_newsletter', {'newsletter': newsletter.id}) }}" class="btn btn-primary m-t-md">Lire la suite</a>
                    </div>
                    <div class="col-md-6 image-view p-l-none">
                        <img class="img-responsive" src="{{ path('newsletter_image_view', {'image_id': newsletter.image.id}) }}" alt="">
                    </div>
                </div>
                {% set newsletter = newsletters[1] %}
                <div class="home-newsletter row">
                    <div class="col-md-6 image-view p-r-none">
                        <img class="img-responsive" src="{{ path('newsletter_image_view', {'image_id': newsletter.image.id}) }}" alt="">
                    </div>
                    <div class="col-md-6">
                        <h3>{{ newsletter.title }}</h3>
                        <p>{{ newsletter.content|truncate(400, true, '...')|nl2br }}</p>
                        <a href="{{ path('front_newsletter', {'newsletter': newsletter.id}) }}" class="btn btn-primary m-t-md">Lire la suite</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
