{% block javascripts %}
    <script>
        function initMap() {
            var uluru = {lat: 47.8607641, lng: 5.3315089};
            var map = new google.maps.Map(document.getElementById('google-map'), {
                zoom: 17,
                center: uluru
            });
            var marker = new google.maps.Marker({
                position: uluru,
                map: map
            });
        }
    </script>
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCXg8yCHuDAiHtCYt916-NjLKemAistJck&callback=initMap"></script>
{% endblock %}
