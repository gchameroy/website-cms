{% extends "admin/layout.html.twig" %}

{% block breadcrumb %}
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2>Modifier une zone de livraison</h2>
            <ol class="breadcrumb">
                <li>
                    <a href="{{ path('admin_home') }}">Dashboard</a>
                </li>
                <li>
                    <a href="{{ path('admin_delivery_zones') }}">Liste des zones de livraisons</a>
                </li>
                <li class="active">
                    <strong>Modifier une zone de livraison</strong>
                </li>
            </ol>
        </div>
    </div>
{% endblock %}

{% block wrapper_content %}
    <div class="row wrapper wrapper-content animated fadeInRight">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content">
                    <h4>Modifier une zone de livraison</h4>
                    {{ form_start(form, {'attr': {'class': 'form-horizontal'} })  }}
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Zone *</label>
                        <div class="col-lg-10">
                            {{ form_widget(form.name, {'attr' : {'class' : 'form-control'} }) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Prix *</label>
                        <div class="col-lg-10">
                            {{ form_widget(form.price, {'attr' : {'class' : 'form-control'} }) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-2"></div>
                        <div class="col-lg-10">
                            <button class="btn btn-sm btn-primary" type="submit">
                                <strong>Enregistrer</strong>
                            </button>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
