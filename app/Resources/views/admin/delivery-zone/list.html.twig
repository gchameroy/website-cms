{% extends "admin/layout.html.twig" %}

{% block breadcrumb %}
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2>Liste des zones de livraisons</h2>
            <ol class="breadcrumb">
                <li>
                    <a href="{{ path('admin_home') }}">Dashboard</a>
                </li>
                <li class="active">
                    <strong>Liste des zones de livraisons</strong>
                </li>
            </ol>
        </div>
        <div class="col-lg-2">
            <div class="title-action">
                <a href="{{ path('admin_delivery_zones_add') }}" class="btn btn-primary btn-sm">Ajouter une zone de livraison</a>
            </div>
        </div>
    </div>
{% endblock %}

{% block wrapper_content %}
    <div class="row wrapper wrapper-content animated fadeInRight">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h4>Liste des zones de livraisons</h4>
                </div>
                <div class="ibox-content">
                    <div class="project-list">
                        <table class="table table-hover">
                            <tbody>
                            {% for deliveryZone in deliveryZones %}
                                <tr>
                                    <td class="project-title" nowrap>{{ deliveryZone.name }}</td>
                                    <td nowrap>{{ deliveryZone.price|number_format(2, ',', ' ') }} â‚¬</td>
                                    <td class="project-actions">
                                        <a href="{{ path('admin_delivery_zone_edit', {'deliveryZoneId': deliveryZone.id }) }}" class="btn btn-primary btn-sm">Modifier</a>
                                        <form class="inline" action="{{ url('admin_delivery_zone_delete') }}" method="post">
                                            <input type="hidden" name="token" value="{{ csrf_token('delivery-zone-delete') }}" />
                                            <input type="hidden" name="deliveryZone" value="{{ deliveryZone.id }}" />
                                            <button class="btn btn-danger btn-sm" type="submit">Supprimer</button>
                                        </form>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td><a href="{{ path('admin_delivery_zones_add') }}" class="btn btn-primary btn-sm">Ajouter une zone de livraison</a></td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
