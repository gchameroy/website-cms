{% extends "admin/layout.html.twig" %}

{% block breadcrumb %}
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2>{{ newsletter.title }}</h2>
            <ol class="breadcrumb">
                <li>
                    <a href="{{ path('admin_home') }}">Home</a>
                </li>
                <li>
                    <a href="{{ path('admin_newsletters') }}">Newsletters</a>
                </li>
                <li class="active">
                    <strong>{{ newsletter.title }}</strong>
                </li>
            </ol>
        </div>
        <div class="col-lg-2">
            <div class="title-action">
                {% if not newsletter.published %}
                    <a href="{{ path('admin_newsletter_publish', {'id': newsletter.id }) }}" class="btn btn-primary btn-sm">Publish</a>
                {% endif %}
                <a href="{{ path('admin_newsletter_edit', {'id': newsletter.id}) }}" class="btn btn-primary btn-sm">Edit</a>
                <a href="{{ path('admin_newsletter_delete', {'id': newsletter.id}) }}" class="btn btn-danger btn-sm">Delete</a>
            </div>
        </div>
    </div>
{% endblock %}

{% block wrapper_content %}
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox product-detail">
                    <div class="ibox-content">
                        <div class="row">
                            <div class="col-md-5">
                                <div class="newsletter-images">
                                    {% if newsletter.image %}
                                        <div>
                                            <div class="image-imitation">
                                                <img alt="image" class="img-preview" src="{{ path('newsletter_image_view', {'image_id': newsletter.image.id}) }}" />
                                            </div>
                                        </div>
                                    {% else %}
                                        <div>
                                            <div class="image-imitation">No Image</div>
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="col-md-7">
                                <h2 class="font-bold m-b-xs">
                                    <span>{{ newsletter.title }}</span>
                                    {% if newsletter.published %}
                                        <label class="label label-info m-l-md">online</label>
                                    {% else %}
                                        <label class="label label-default m-l-md">offline</label>
                                    {% endif %}
                                </h2>
                                <hr>
                                <h4>Newsletter content</h4>
                                <div class="small text-muted">{{ newsletter.content|nl2br }}</div>
                                <p class="m-t">
                                    {% if newsletter.image %}
                                        <button class="btn btn-primary action_newsletter_image_add">Change Image</button>
                                    {% else %}
                                        <button class="btn btn-primary action_newsletter_image_add">Add Image</button>
                                    {% endif %}
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready(function(){
            $('.newsletter-images').slick({
                dots: true
            });
        });
        $('.action_newsletter_image_add').click(function(e){
            e.preventDefault();
            e.stopPropagation();
            $.get('{{ path('admin_newsletter_add_image', { id: newsletter.id }) }}').done(function(response){
                $(response).modal();
            });
        });
    </script>
{% endblock %}
