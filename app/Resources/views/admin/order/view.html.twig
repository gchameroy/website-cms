{% extends "admin/layout.html.twig" %}

{% block breadcrumb %}
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2>Order #{{ order.id }}</h2>
            <ol class="breadcrumb">
                <li>
                    <a href="{{ path('admin_home') }}">Home</a>
                </li>
                <li>
                    <a href="{{ path('admin_orders') }}">Order List</a>
                </li>
                <li class="active">
                    <strong>Order #{{ order.id }}</strong>
                </li>
            </ol>
        </div>
    </div>
{% endblock %}
{% block wrapper_content %}
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Attributes</th>
                            <th class="text-center">Quantity</th>
                            <th>Price</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for orderProduct in order.orderProducts %}
                        <tr>
                            <td>{{ orderProduct.product.label }}</td>
                            <td>
                                {% for attribute in orderProduct.product.attributes %}
                                    - {{ attribute.label }}
                                {% else %}
                                    None
                                {% endfor %}
                            </td>
                            <td class="text-center">{{ orderProduct.quantity }}</td>
                            <td>{{ orderProduct.price|number_format(2, ',', ' ') }}€</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="2"></td>
                            <td>Sub total</td>
                            <td>{{ order.price|number_format(2, ',', ' ') }}€</td>
                        </tr>
                        <tr>
                            <td colspan="2"></td>
                            <td>Shipping fee</td>
                            <td>0,00€</td>
                        </tr>
                        <tr>
                            <td colspan="2"></td>
                            <td>Total TTC</td>
                            <td>{{ order.price|number_format(2, ',', ' ') }}€</td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
