{% extends "admin/layout.html.twig" %}

{% block breadcrumb %}
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2>Order #{{ order.id }}</h2>
            <ol class="breadcrumb">
                <li>
                    <a href="{{ path('admin_home') }}">Dashboard</a>
                </li>
                <li>
                    <a href="{{ path('admin_orders') }}">Liste des commandes</a>
                </li>
                <li class="active">
                    <strong>Commande N°{{ order.id }}</strong>
                </li>
            </ol>
        </div>
    </div>
{% endblock %}
{% block wrapper_content %}
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Produit</th>
                            <th>Attributs</th>
                            <th class="text-center">Quantité</th>
                            <th class="text-right">Prix</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for orderProduct in order.orderProducts %}
                        <tr>
                            <td>{{ orderProduct.product.label }}</td>
                            <td>
                                {% for attribute in orderProduct.product.attributes %}
                                    <span>- {{ attribute.label }}</span>
                                {% else %}
                                   <span>/</span>
                                {% endfor %}
                            </td>
                            <td class="text-center">{{ orderProduct.quantity }}</td>
                            <td class="text-right">{{ orderProduct.price|number_format(2, ',', ' ') }}€</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="2"></td>
                            <td>Sous total</td>
                            <td class="text-right">{{ order.price|number_format(2, ',', ' ') }}€</td>
                        </tr>
                        <tr>
                            <td colspan="2"></td>
                            <td>Frais de livraison</td>
                            <td class="text-right">0,00€</td>
                        </tr>
                        <tr>
                            <td colspan="2"></td>
                            <td>Total TTC</td>
                            <td class="text-right">{{ order.price|number_format(2, ',', ' ') }}€</td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
