{% extends "admin/layout.html.twig" %}

{% block breadcrumb %}
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2>Liste des offres</h2>
            <ol class="breadcrumb">
                <li>
                    <a href="{{ path('admin_home') }}">Dashboard</a>
                </li>
                <li class="active">
                    <strong>Liste des offres</strong>
                </li>
            </ol>
        </div>
        <div class="col-lg-2">
            <div class="title-action">
                <a href="{{ path('admin_user_offers_add') }}" class="btn btn-primary btn-sm">Ajouter une offre</a>
            </div>
        </div>
    </div>
{% endblock %}

{% block wrapper_content %}
    <div class="row wrapper wrapper-content animated fadeInRight">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h4>Liste des offres</h4>
                </div>
                <div class="ibox-content">
                    <div class="project-list">
                        <table class="table table-hover">
                            <tbody>
                            {% for offer in offers %}
                                <tr>
                                    <td class="project-title" nowrap>
                                        {{- offer.label -}}
                                    </td>
                                    <td class="project-actions">
                                        {% if offer.label != 'Sans offre' %}
                                            <a href="{{ path('admin_user_offer_edit', {'id': offer.id }) }}" class="btn btn-primary btn-sm">Editer</a>
                                            <a href="{{ path('admin_user_offer_delete', {'id': offer.id }) }}" class="btn btn-danger btn-sm">Supprimer</a>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td>
                                        <a href="{{ path('admin_user_offers_add') }}" class="btn btn-primary btn-sm">Ajouter une offre</a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
