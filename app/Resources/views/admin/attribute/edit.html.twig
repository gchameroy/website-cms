{% extends "::layout.html.twig" %}

{% block breadcrumb %}
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2>{{ attribute.label }}</h2>
            <ol class="breadcrumb">
                <li>
                    <a href="{{ path('admin_home') }}">Home</a>
                </li>
                <li>
                    <a href="{{ path('admin_categories_attribute') }}">Category Attribute List</a>
                </li>
                <li class="active">
                    <strong>{{ attribute.label }}</strong>
                </li>
            </ol>
        </div>
    </div>
{% endblock %}


{% block wrapper_content %}
    <div class="row wrapper wrapper-content animated fadeInRight">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content">
                    <h4>Update attribute</h4>
                    &nbsp;
                    {{ form_start(form, {'attr': {'class': 'form-horizontal'} })  }}
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Label</label>
                        <div class="col-lg-10">
                            {{ form_widget(form.label, {'attr' : {'class' : 'form-control'} }) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Category Attribute</label>
                        <div class="col-lg-8">
                            {{ form_widget(form.categoryAttribute, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                        <div class="col-lg-2">
                            <div class="btn btn-sm btn-primary add_category_attribute">Add Category</div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-2"></div>
                        <div class="col-lg-10">
                            <button class="btn btn-sm btn-primary" type="submit">
                                <strong>Save Attribute</strong>
                            </button>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script>
        $('.add_category_attribute').click(function(e){
            e.preventDefault();
            e.stopPropagation();
            $.get('{{ path('admin_attribute_add_category') }}').done(function(response){
                $(response).modal();
            });
        });
    </script>
{% endblock %}
