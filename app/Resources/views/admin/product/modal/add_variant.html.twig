<div class="modal inmodal fade" tabindex="-1" role="dialog"  aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span>
                    <span class="sr-only">fermer</span>
                </button>
                <h4 class="modal-title">Ajouter un modèle</h4>
            </div>
            {{ form_start(form, {'action': path('admin_product_variant_add', {id: product.id})}) }}
            <div class="modal-body">
                <div class="form-group row">
                    <label class="col-lg-2 control-label">Contenance</label>
                    <div class="col-lg-10">
                        {{ form_widget(form.variantName, {'attr' : {'class' : 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-2 control-label">Référence</label>
                    <div class="col-lg-10">
                        {{ form_widget(form.reference, {'attr' : {'class' : 'form-control'} }) }}
                    </div>
                </div>
                {% for offer in offers %}
                    <div class="form-group row">
                        <label class="col-lg-2 control-label">Prix ({{ offer.label }})</label>
                        <div class="col-lg-10">
                            <input type="text" id="product_price_{{ offer.id }}" name="product[product_price_{{ offer.id }}]" required="required" class="form-control">
                        </div>
                    </div>
                {% endfor %}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-white" data-dismiss="modal">Annuler</button>
                <button type="submit" class="btn btn-primary">Ajouter</button>
            </div>
            {{ form_widget(form._token) }}
            {{ form_end(form, {'render_rest': false}) }}
        </div>
    </div>
</div>
