<div class="modal inmodal fade" tabindex="-1" role="dialog"  aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Fermer</span></button>
                <h4 class="modal-title">Ajouter une photo</h4>
            </div>
            {{ form_start(form, {'action': path('admin_product_add_photo', {id: product.id}), 'attr': {'enctype': 'multipart/form-data'}}) }}
            <div class="modal-body">
                <div class="row">
                    <div class="form-group">
                        {{ form_label(form.path, "Photo", {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_widget(form.path, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-white" data-dismiss="modal">Annuler</button>
                {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
            </div>
            {{ form_rest(form) }}
            {{ form_end(form) }}
        </div>
    </div>
</div>
