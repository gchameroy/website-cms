{% extends "admin/layout.html.twig" %}

{% block breadcrumb %}
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2>Ajouter un produit</h2>
            <ol class="breadcrumb">
                <li>
                    <a href="{{ path('admin_home') }}">Dashboard</a>
                </li>
                <li>
                    <a href="{{ path('admin_products') }}">Liste des produits</a>
                </li>
                <li class="active">
                    <strong>Ajouter un produit</strong>
                </li>
            </ol>
        </div>
    </div>
{% endblock %}

{% block wrapper_content %}
    <div class="row wrapper wrapper-content animated fadeInRight">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content">
                    <h4>Ajouter un produit</h4>
                    {{ form_start(form, {'attr': {'class': 'form-horizontal'} })  }}
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Nom</label>
                        <div class="col-lg-10">
                            {{ form_widget(form.label, {'attr' : {'class' : 'form-control'} }) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Description</label>
                        <div class="col-lg-10">
                            {{ form_widget(form.description, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Prix</label>
                        <div class="col-lg-10">
                            {{ form_widget(form.price, {'attr' : {'class' : 'form-control'} }) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Titre SEO</label>
                        <div class="col-lg-10">
                            {{ form_widget(form.titleSEO, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Description SEO</label>
                        <div class="col-lg-10">
                            {{ form_widget(form.descriptionSEO, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Categorie</label>
                        <div class="col-lg-8">
                            {{ form_widget(form.category, {'attr' : {'class' : 'form-control'} }) }}
                        </div>
                        <div class="col-lg-2">
                            <div class="btn btn-sm btn-primary modal_add_category">Ajouter une Categorie</div>
                        </div>
                    </div>
                    {% for category_attribute in categories_attribute %}
                        <div class="form-group">
                            <h5 class="clickCategoryAttribute" data-id="{{ category_attribute.id }}">
                                {{ category_attribute.label }}
                                <i class="fa fa-arrow-down"></i>
                            </h5>
                            <div class="listAttribute" style="display: none"></div>
                        </div>
                    {% endfor %}

                    <div class="form-group">
                        <div class="col-lg-2"></div>
                        <div class="col-lg-10">
                            <button class="btn btn-sm btn-primary" type="submit">
                                <strong>Ajouter</strong>
                            </button>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script>
        $('.modal_add_category').click(function(e){
            e.preventDefault();
            e.stopPropagation();
            $.get('{{ path('admin_add_category') }}').done(function(response){
                $(response).modal();
            });
        });
        $('.clickCategoryAttribute').click(function (e) {
            var listAttributes = $(this).parent().find('.listAttribute');
            var category_id = $(this).attr('data-id');
            listAttributes.toggle();
            $(this).find('i').toggleClass('fa-arrow-down', 'fa-arrow-up');
            $(this).find('i').toggleClass('fa-arrow-up', 'fa-arrow-down');

            $.ajax({
                type: 'POST',
                url: '{{ path('admin_add_product_attributes') }}',
                data: {
                    category_id: category_id
                },
                success: function(jqXHR){
                    listAttributes.html(jqXHR);
                }
            });
        });
    </script>
{% endblock %}
