{% extends '::layout.html.twig' %}

{% block title 'Admin Panel - Sign In' %}

{% block body_class 'gray-bg' %}

{% block wrapper %}
    <div class="middle-box text-center loginscreen animated fadeInDown">
        <div>
            <p>Hi there! Please sign in.</p>
            <form class="m-t" action="{{ path('login_check') }}" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" name="_username" value="{{ last_username }}">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="_password">
                </div>
                {% if error %}
                    <p class="m-b-0 text-danger">{{ error.messageKey }}</p>
                {% endif %}
                <button type="submit" class="btn btn-primary block full-width m-b">Sign in</button>
            </form>
        </div>
    </div>
{% endblock %}
