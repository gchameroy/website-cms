{% extends 'admin/layout.html.twig' %}

{% block title 'Admin Panel - Sign In' %}

{% block body_class 'gray-bg' %}

{% block wrapper %}
    <div class="middle-box text-center loginscreen animated fadeInDown">
        <div>
            <p>Bonjour, merci de saisir vos identifiants.</p>
            <form class="m-t" action="{{ path('admin_login') }}" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" name="_username" value="{{ last_username }}" placeholder="Email">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="_password" placeholder="Mot de passe">
                </div>
                {% if error %}
                    <p class="m-b-0 text-danger">{{ error.messageKey }}</p>
                {% endif %}
                <button type="submit" class="btn btn-primary block full-width m-b">Se connecter</button>
            </form>
        </div>
    </div>
{% endblock %}
