{% extends "admin/layout.html.twig" %}

{% block breadcrumb %}
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2>Ajouter un client</h2>
            <ol class="breadcrumb">
                <li>
                    <a href="{{ path('admin_home') }}">Dashboard</a>
                </li>
                <li>
                    <a href="{{ path('admin_users') }}">Liste des clients</a>
                </li>
                <li class="active">
                    <strong>Ajouter un client</strong>
                </li>
            </ol>
        </div>
    </div>
{% endblock %}

{% block wrapper_content %}
    <div class="row wrapper wrapper-content animated fadeInRight">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content">
                    <h5>Informations du client</h5>
                    {{ form_start(form, {'attr': {'class': 'form-horizontal'} })  }}
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Prénom / Nom</label>
                        <div class="col-lg-5">
                            {{ form_widget(form.firstName, {'attr' : {'class' : 'form-control'} }) }}
                        </div>
                        <div class="col-lg-5">
                            {{ form_widget(form.lastName, {'attr' : {'class' : 'form-control'} }) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Offre / Société</label>
                        <div class="col-lg-3">
                            {{ form_widget(form.offer, {'attr' : {'class' : 'form-control'} }) }}
                        </div>
                        <div class="col-lg-7">
                            {{ form_widget(form.company, {'attr' : {'class' : 'form-control'} }) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Email / Téléphone</label>
                        <div class="col-lg-5">
                            {{ form_widget(form.email, {'attr' : {'class' : 'form-control'} }) }}
                        </div>
                        <div class="col-lg-5">
                            {{ form_widget(form.phone, {'attr' : {'class' : 'form-control'} }) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Mot de passe</label>
                        <div class="col-lg-5">
                            {{ form_widget(form.plainPassword, {'attr' : {'class' : 'form-control'} }) }}
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-lg-6">
                            <h5>Adresse de facturation</h5>
                            <div class="form-group">
                                <label class="col-lg-2 control-label small">Prénom<br>Nom</label>
                                <div class="col-lg-5">
                                    {{ form_widget(form.billingAddress.firstName, {'attr' : {'class' : 'form-control'} }) }}
                                </div>
                                <div class="col-lg-5">
                                    {{ form_widget(form.billingAddress.lastName, {'attr' : {'class' : 'form-control'} }) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-2 control-label small">Société</label>
                                <div class="col-lg-10">
                                    {{ form_widget(form.billingAddress.company, {'attr' : {'class' : 'form-control'} }) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-2 control-label small">Adresse</label>
                                <div class="col-lg-10">
                                    {{ form_widget(form.billingAddress.address, {'attr' : {'class' : 'form-control'} }) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-2 control-label small">Code postal<br>Ville<br>Pays</label>
                                <div class="col-lg-2">
                                    {{ form_widget(form.billingAddress.zipCode, {'attr' : {'class' : 'form-control'} }) }}
                                </div>
                                <div class="col-lg-4">
                                    {{ form_widget(form.billingAddress.city, {'attr' : {'class' : 'form-control'} }) }}
                                </div>
                                <div class="col-lg-4">
                                    {{ form_widget(form.billingAddress.country, {'attr' : {'class' : 'form-control'} }) }}
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <h5>Adresse de livraison</h5>
                            <div class="form-group">
                                <label class="col-lg-2 control-label small">Prénom<br>Nom</label>
                                <div class="col-lg-5">
                                    {{ form_widget(form.deliveryAddress.firstName, {'attr' : {'class' : 'form-control'} }) }}
                                </div>
                                <div class="col-lg-5">
                                    {{ form_widget(form.deliveryAddress.lastName, {'attr' : {'class' : 'form-control'} }) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-2 control-label small">Société</label>
                                <div class="col-lg-10">
                                    {{ form_widget(form.deliveryAddress.company, {'attr' : {'class' : 'form-control'} }) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-2 control-label small">Adresse</label>
                                <div class="col-lg-10">
                                    {{ form_widget(form.deliveryAddress.address, {'attr' : {'class' : 'form-control'} }) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-2 control-label small">Code postal<br>Ville<br>Pays</label>
                                <div class="col-lg-2">
                                    {{ form_widget(form.deliveryAddress.zipCode, {'attr' : {'class' : 'form-control'} }) }}
                                </div>
                                <div class="col-lg-4">
                                    {{ form_widget(form.deliveryAddress.city, {'attr' : {'class' : 'form-control'} }) }}
                                </div>
                                <div class="col-lg-4">
                                    {{ form_widget(form.deliveryAddress.country, {'attr' : {'class' : 'form-control'} }) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr>
                    <div class="form-group">
                        <div class="col-lg-12">
                            <button class="btn btn-sm btn-primary btn-block" type="submit">Ajouter</button>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
