{% extends "admin/layout.html.twig" %}

{% block breadcrumb %}
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2>Liste des clients</h2>
            <ol class="breadcrumb">
                <li>
                    <a href="{{ path('admin_home') }}">Dashboard</a>
                </li>
                <li class="active">
                    <strong>Liste des clients</strong>
                </li>
            </ol>
        </div>
        <div class="col-lg-2">
            <div class="title-action">
                <a href="#" class="btn btn-primary btn-sm">Ajouter un client</a>
            </div>
        </div>
    </div>
{% endblock %}

{% block wrapper_content %}
    <div class="row wrapper wrapper-content animated fadeInRight">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h4>Liste des clients</h4>
                </div>
                <div class="ibox-content">
                    <div class="project-list">
                        <table class="table table-hover">
                            <tbody>
                            {% for user in users %}
                                <tr>
                                    <td width="10">
                                        {% if user.offer.label %}
                                            <label class="label label-primary">{{ user.offer.label|lower }}</label>
                                        {% else %}
                                            <label class="label label-info">aucune offre</label>
                                        {% endif %}
                                    </td>
                                    <td class="project-title" nowrap>
                                        {{- user.firstName }} {{ user.lastName -}}
                                        <br><small>{{ user.company }}</small>
                                    </td>
                                    <td>
                                        {{- user.email -}}
                                        <br><small>{{ user.phone }}</small>
                                    </td>
                                    <td>
                                        <span>{{ user.orders|length }} commandes</span>
                                        <br><small>{{ user.total|number_format(2, ',', ' ') }} â‚¬</small>
                                    </td>
                                    <td class="text-center">Inscrit le {{ user.registeredAt|date('d/m/Y') }}</td>
                                    <td width="10" class="project-actions">
                                        <a href="#" class="btn btn-primary btn-sm">Editer</a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td>
                                        <a href="#" class="btn btn-primary btn-sm">Ajouter un client</a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
