{% extends "front/layout.html.twig" %}

{% block sections %}
    {% set user_offer = null %}
    {% if app.user %}
        {% set user_offer = app.user.offer %}
    {% endif %}
    <section class="section-cart m-b-xl">
        <div class="container">
            <h2 class="m-b-md">Panier</h2>
            <p class="indent m-b-md">Notre site ne dispose actuellement d’aucun système de paiement en ligne, nous vous contacterons directement pour finaliser ensemble votre commande. Nous restons à votre disposition pour toutes questions.</p>
            <div class="row">
                <div class="col-md-3">
                    <h4 class="p-h-xs p-w-md m-n">1. Résumé</h4>
                </div>
                <div class="col-md-3">
                    <h4 class="p-h-xs p-w-md m-n">2. Identifiez-vous</h4>
                </div>
                <div class="col-md-3">
                    <h4 class="p-h-xs p-w-md m-n">3. Adresse</h4>
                </div>
                <div class="col-md-3">
                    <h4 class="bg-white p-h-xs p-w-md m-n">4. Récapitulatif</h4>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="bg-white p-w-sm">
                        <table class="table">
                            <thead>
                            <tr>
                                <th>Article</th>
                                <th>Nom du Produit</th>
                                <th class="text-center">Prix</th>
                                <th class="text-center">Quantité</th>
                                <th class="text-center">Total</th>
                            </tr>
                            </thead>
                            <tbody>
                                {% for cartProduct in cart.cartProducts %}
                                    <tr>
                                        <td class="td-image">
                                            {% set path_img = path('product_image_view', {'image_id': 0}) %}
                                            {% if cartProduct.product.images|length > 0 %}
                                                {% set path_img = path('product_image_view', {'image_id': cartProduct.product.images[0].id}) %}
                                            {% endif %}
                                            <img class="img-lg" src="{{ path_img }}" alt="">
                                        </td>
                                        <td>
                                            <span>{{ cartProduct.product.label }}</span>
                                            <br><em>{{ cartProduct.product.variantName }}</em>
                                        </td>
                                        <td class="text-center">{{ cartProduct.product.price(user_offer)|number_format(2, '.', ' ') }}€</td>
                                        <td class="text-center">
                                                <span class="m-r-sm">
                                                    <a href="{{ path('front_cart_remove_one_quantity', {'cartProduct': cartProduct.id}) }}">
                                                        <span>-</span>
                                                    </a>
                                                </span>
                                            <span>{{ cartProduct.quantity }}</span>
                                            <span class="m-l-sm">
                                                    <a href="{{ path('front_cart_add_one_quantity', {'cartProduct': cartProduct.id}) }}">
                                                        <span>+</span>
                                                    </a>
                                                </span>
                                        </td>
                                        <td class="text-center">{{ cartProduct.price(user_offer)|number_format(2, '.', ' ') }}€</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="3"></td>
                                    <td><strong>Sous-total*</strong></td>
                                    <td class="text-center">{{ cart.price(user_offer)|number_format(2, '.', ' ') }}€</td>
                                </tr>
                                <tr>
                                    <td colspan="3"></td>
                                    <td class="border"><strong>Frais de port</strong></td>
                                    <td class="border text-center">{{ app.user.deliveryZone.price|number_format(2, '.', ' ') }}€</td>
                                </tr>
                                <tr>
                                    <td colspan="3" class="b-none"></td>
                                    <td><strong>Total TTC</strong></td>
                                    <td class="text-center">{{ (cart.price(user_offer) + app.user.deliveryZone.price)|number_format(2, '.', ' ') }}€</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
            <div class="clear m-t-md">
                <form method="post">
                    <span class="pull-right">
                        <input type="hidden" name="token" value="{{ csrf_token('client-order-recap') }}" />
                        <button type="submit" class="btn btn-primary m-l-md">Confirmer</button>
                    </span>
                </form>
            </div>
        </div>
    </section>
    {{ render(controller('AppBundle:Front/Home:products', {'max': 3})) }}
{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready(function() {
            $('a[name="order"]').click(function() {
                if (false === $('input[name="accept"]').is(':checked')) {
                    window.alert('Vous devez accepter les conditions d\'utilisation et de ventes');
                    return false;
                }
            });
        });
    </script>
{% endblock %}
