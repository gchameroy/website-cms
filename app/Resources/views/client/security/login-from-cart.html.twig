{% extends "front/layout.html.twig" %}

{% block sections %}
    <section id="login_form">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h2>Cart<small class="m-l-md">2. Sign In</small></h2>
                    <div class=row">
                        <div class="col-md-6">
                            <h3>Already client</h3>
                            <form action="{{ path('client_login_check') }}" method="post">
                                <div class="form-group">
                                    <input type="text" class="form-control" name="_username" value="{{ last_username }}" placeholder="Email address">
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control" name="_password" placeholder="Password">
                                </div>
                                {% if error %}
                                    <p class="text-danger">{{ error.messageKey }}</p>
                                {% endif %}
                                <button type="submit" class="btn btn-primary">Sign in</button>
                            </form>
                        </div>
                        <div class="col-md-6">
                            <h3>New client</h3>
                            <div class="form-group">
                                <input type="text" class="form-control" required name="register_email" placeholder="Votre Adresse Email">
                            </div>
                            <p class="text-danger" id="email_error" style="display:none">Adresse Email non valide.</p>
                            <a id="submit_email" class="btn btn-primary">Cr√©er un compte</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
{% block javascripts %}
    <script>
        $('#submit_email').click(function(e) {
            e.preventDefault();
            e.stopPropagation();

            var reg = new RegExp('^[a-z0-9]+([_|\.|-]{1}[a-z0-9]+)*@[a-z0-9]+([_|\.|-]{1}[a-z0-9]+)*[\.]{1}[a-z]{2,10}$', 'i');
            var email = $('input[name="register_email"]').val();
            if (email != null && reg.test(email)) {
                $.ajax({
                    url         : "{{ path('client_register_email') }}",
                    type        : "POST",
                    data        : { 'email' : email },
                    dataType    : "json",
                    success     : function(result) {
                        console.log(result);
                        if (result[0]) {
                            window.location = result[1];
//                            $(location).attr('href',result[1]);
                        }
                        else {
                            $('#email_error').show();
                        }
                    },
                    error : function(result) {
                        console.log(result);
                    }
                });
            }
            else {
                $('#email_error').show();
            }
        });
    </script>
{% endblock %}
